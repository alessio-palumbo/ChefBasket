<div class="search-bar">
  <%= form_tag(@order_product, method: "get", class: 'd-flex') do %>
    <%= hidden_field_tag :order, @order.id %>
    <%= text_field_tag :search, params[:search], placeholder: "Search product", class: 'field-input search-input' %>
    <%= submit_tag "Search", class: 'button' %>
  <% end %>
</div>

<% if params[:search] %>
  <p><strong><%= pluralize (@product.count), 'result' %> found</strong>
    <%= link_to 'Clear', new_order_product_path(order: @order), class: 'link-signin'%>
  </p>
<% end %> 